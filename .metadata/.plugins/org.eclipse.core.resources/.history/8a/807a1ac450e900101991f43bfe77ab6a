package cl.automind.empathy.fw.data;

import java.util.ArrayList;
import java.util.List;

import cl.automind.empathy.data.DataEntry;
import cl.automind.empathy.data.IData;

public class InternalDataEntry extends DataEntry{

	private final List<IData> backup;
	
	public InternalDataEntry(IData value){
		this(value, false);
	}
	public InternalDataEntry(int id, IData value){
		this(id, value, false);
	}
	public InternalDataEntry(IData value, boolean useBackup){
		super(value);
		backup = useBackup ? initializeBackup() : null;
	}
	public InternalDataEntry(int id, IData value, boolean useBackup){
		super(id,value);
		backup = useBackup ? initializeBackup() : null;
	}
	private List<IData> initializeBackup() {
		return new ArrayList<IData>();
	}
	@Override
	protected void onSetValue(IData oldValue, IData newValue) {
		if(backup != null) backup.add(newValue);
		setVersion(getVersion() + 1);
	}
	public IData getValue(int version){
		if (backup == null) return getValue();
		if (version < 0) return null;
		if (version > backup.size() - 1) return null;
		return backup.get(version);
	}
}
