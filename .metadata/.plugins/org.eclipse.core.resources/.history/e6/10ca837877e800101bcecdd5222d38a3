package cl.automind.empathy.test;

import cl.automind.empathy.data.IData;

public class TestData implements IData {
	private int value;
	private String name;

	@Override
	public <T extends IData> boolean like(T template) {
		// TODO Auto-generated method stub
		return false;
	}
	
	@Override
	public boolean like(IData template, String field) {
		if (template instanceof TestData){
			TestData temp = (TestData) template;
			if (field.equals("value")){
				return getValue() == temp.getValue();
			}
			else if (field.equals("name")){
				return getName().equals(temp.getName());
			}
		}
		return false;
	}
	
	@Override
	public boolean like(IData template, String... fields) {
		for(String field: fields){
			if (!like(template, field)) return false;
		}
		return true;
	}
	
	public void setValue(int value) {
		this.value = value;
	}

	public int getValue() {
		return value;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getName() {
		return name;
	}

	@Override
	public <T> boolean valueOfField(String field, T value) {
		if (field == "value"){
			return getValue() == (Integer) value;
		}
		else if (field == "name"){
			return getName().equals((String) value);
		}
		return false;
	}

}
