package cl.automind.empathy.test;

import java.lang.reflect.Method;
import java.util.HashMap;
import java.util.Map;

import cl.automind.empathy.data.IData;

public class Data implements IData{

	private final Class<? extends Data> clazz;
	@SuppressWarnings("rawtypes")
	private final static Class[] classes = new Class[]{};
	private final static Object[] objects = new Object[]{};
	private final Map<String, Method> methods;
	
	private int idSector;
	private int idAxis;
	private int idCMO;
	private int idKO;
	
	public Data(){
		clazz = getClass();
		methods = new HashMap<String, Method>();
	}
	@Override
	public CompareResult compare(String field, Object value) {
		// TODO Auto-generated method stub
		return null;
	}

	public Object getValue(String field){
		try {
			return clazz.getMethod("get"+capitalizeFirst(field), classes).invoke(this, objects);
		} catch (Exception e){
			return null;
		}
	}
	private String capitalizeFirst(String s){
		return s.substring(0,1).toUpperCase() + (s.length() > 1 ? s.substring(1) : "");
	}
	public void setIdSector(int idSector) {
		this.idSector = idSector;
	}
	public int getIdSector() {
		return idSector;
	}
	public void setIdAxis(int idAxis) {
		this.idAxis = idAxis;
	}
	public int getIdAxis() {
		return idAxis;
	}
	public void setIdCMO(int idCMO) {
		this.idCMO = idCMO;
	}
	public int getIdCMO() {
		return idCMO;
	}
	public void setIdKO(int idKO) {
		this.idKO = idKO;
	}
	public int getIdKO() {
		return idKO;
	}
}
